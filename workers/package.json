{
    "name": "wine-tasting-workers",
    "version": "1.0.0",
    "description": "Cloudflare Workers backend for wine tasting app",
    "main": "src/index.js",
    "scripts": {
        "dev": "wrangler dev",
        "deploy": "wrangler deploy",
        "db:create": "wrangler d1 create wine-events",
