        "db:migrate:prod": "wrangler d1 migrations apply wine-events"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20240925.0",
        "wrangler": "^3.78.12"
    },
    "dependencies": {
        "uuid": "^9.0.1"
    }
}